<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_background"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_youtube_fragment_container"
            android:layout_width="@dimen/landscape_youtube_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/home_page_youttube_fragment_top_margin"
            android:paddingBottom="@dimen/m_design_space_between_content_area"
            android:visibility="visible" />

        <include layout="@layout/content_home_movie_fragment" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>