<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_detail_review_recycler_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:paddingBottom="@dimen/m_design_space_between_content_area"
    android:paddingEnd="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingLeft="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingRight="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingStart="@dimen/m_design_screen_edge_left_right_margin">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_detail_review_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <!-- this is to display a message when the recyclerview is empty -->
    <TextView
        android:id="@+id/movie_detail_review_recycler_view_empty_msg_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/m_design_space_between_content_area"
        android:paddingEnd="@dimen/m_design_screen_edge_left_right_margin"
        android:paddingLeft="@dimen/m_design_screen_edge_left_right_margin"
        android:paddingRight="@dimen/m_design_screen_edge_left_right_margin"
        android:paddingStart="@dimen/m_design_screen_edge_left_right_margin"
        android:paddingTop="@dimen/m_design_space_between_content_area"
        android:text="@string/movie_detail_review_recycler_view_empty_msg"/>
</FrameLayout>