<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_detail_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/m_design_space_between_content_area"
    android:paddingEnd="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingLeft="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingRight="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingStart="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingTop="@dimen/m_design_space_between_content_area">
    <TextView
        android:id="@+id/movie_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="@string/movie_detail_title_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/movie_detail_mpaa_image"
            android:layout_width="@dimen/detail_today_layout_mpga_image_size"
            android:layout_height="@dimen/detail_today_layout_mpga_image_size"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/movie_detail_title_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/m_design_screen_edge_left_right_margin"
            android:text="@string/movie_detail_genre"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_color" />
        <TextView
            android:id="@+id/movie_detail_title_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_detail_runtime"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_color" />
    </LinearLayout>
</LinearLayout>