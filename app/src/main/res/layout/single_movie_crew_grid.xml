<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_movie_crew_grid_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/single_movie_crew_grid_card_view_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        cardview:cardBackgroundColor="@color/primary"
        cardview:cardCornerRadius="@dimen/card_view_corner_radius"
        cardview:cardElevation="@dimen/card_view_elevation"
        cardview:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/single_movie_crew_grid_image"
                    android:layout_width="@dimen/grid_image_width"
                    android:layout_height="@dimen/grid_image_height"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/movie_crew_grid_image_content_description"
                    android:src="@drawable/image_place_holder" />

                <TextView
                    android:id="@+id/single_movie_crew_grid_crew_name"
                    android:layout_width="@dimen/grid_image_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:alpha="@string/movie_detail_crew_name_background_alpha"
                    android:background="@color/primary"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingBottom="@dimen/grid_overlapping_text_padding"
                    android:maxLines="1"
                    android:text="@string/crew_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/primary_text"
                    android:textStyle="italic" />
            </FrameLayout>

            <TextView
                android:id="@+id/single_movie_crew_grid_job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingBottom="@dimen/grid_overlapping_text_padding"
                android:paddingTop="@dimen/grid_overlapping_text_padding"
                android:maxLines="1"
                android:text="@string/job_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/primary_text"
                android:textStyle="italic" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>