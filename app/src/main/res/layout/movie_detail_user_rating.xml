<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_detail_user_rating_layout"
    android:background="@color/primary"
    android:paddingLeft="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingStart="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingRight="@dimen/m_design_screen_edge_left_right_margin"
    android:paddingEnd="@dimen/m_design_screen_edge_left_right_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/movie_detail_user_rating_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:text="@string/user_rating_text"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    <RatingBar
        android:id="@+id/movie_detail_user_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight = "32dp"
        android:maxHeight = "32dp"
        android:max="10"
        android:numStars="10"
        android:rating="2.5"
        android:stepSize="0.1"
        style="?android:attr/ratingBarStyleIndicator"
        android:isIndicator="false"
        android:layout_gravity="left"/>
</LinearLayout>